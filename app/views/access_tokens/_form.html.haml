= form_for @access_token do |f|
  -if @access_token.errors.any?
    #error_explanation
      %h2= "#{pluralize(@access_token.errors.count, "error")} prohibited this access_token from being saved:"
      %ul
        - @access_token.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :key
    = f.text_field :key
  .field
    = f.label :secret
    = f.text_field :secret
  .actions
    = f.submit 'Save'
